        <button type = "button" id="background-button" class="btn btn-success" style = "position:relative; left:2px">Click to change Background</button>
        <button type = "button" id = "move-button" class="btn btn-warning" style = "position:relative">Click Me to Move the Background Button</button>
        <script>
            function backgroundFunc() {
                //console.log("Check");
                $("body").css("background-color", "#" + Math.random().toString(16).substr(-6));
                $("#background-button").text("Background Changed");
                //document.body.style.backgroundColor = "#"+(rnd).toString(16)+(rnd).toString(16)+(rnd).toString(16);
            }
            document.getElementById("background-button").onclick = backgroundFunc;
        </script>
        <script>
            var move = 720;
            $(document).ready(function () { //this script moves the 'Change background' button back and forth
                $("#move-button").click(function () {
                    $("#background-button").animate({left:"+=" + move}, 0);
                    move = -move;
                });
            });
        </script>
